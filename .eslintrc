{
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "extends": "airbnb",
  "rules": {
    "no-plusplus": 0,
    "react/no-unknown-property": 0,
    "react/prop-types": [
      2,
      {
        "skipUndeclared": true
      }
    ]
  },
  "parser": "babel-eslint",
  "plugins": [
    "react"
  ],
  "globals": {
    "describe": true,
    "it": true,
    "__webpack_hash__": true
  }
}
